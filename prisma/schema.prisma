generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Blog {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  author      String
  category    String
  description String
  short_description String
  image       String?  // URL or file path
  readTime    Int      @default(7)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}